{
  "name": "meal-planner",
  "version": "1.0.0",
  "private": true,
  "description": "Meal planning and grocery shopping app with intelligent defaults",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --prefix backend",
    "dev:frontend": "npm run dev --prefix frontend",
    "build": "npm run build --prefix backend && npm run build --prefix frontend",
    "db:generate": "npm run db:generate --prefix backend",
    "db:push": "npm run db:push --prefix backend",
    "db:migrate": "npm run db:migrate --prefix backend",
    "db:studio": "npm run db:studio --prefix backend"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "playwright": "^1.58.1"
  }
}
